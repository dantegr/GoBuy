<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <EditText
            android:id="@+id/DateWanted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="59dp"
            android:autofillHints="Income"
            android:ems="10"
            android:hint="Datewanted"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/MoneySaved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="59dp"
            android:ems="10"
            android:hint="MoneySaved"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/ItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="59dp"
            android:ems="10"
            android:hint="ItemName"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/ItemPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="59dp"
            android:ems="10"
            android:hint="ItemPrice"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/IncomeAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="59dp"
            android:ems="10"
            android:hint="IncomeAmount/Month"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/IncomeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="59dp"
            android:ems="10"
            android:hint="IncomeName"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/BillName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="59dp"
            android:ems="10"
            android:hint="BillName"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/BillAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="59dp"
            android:ems="10"
            android:hint="Bill/Month"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button" />

    </LinearLayout>
</ScrollView>